a,b=map(int, input().split())
number = 999999999999999999999999999999999999999999999999999
clst=[]
dlst=[]
for i in range(b):
    c, d = map(int, input().split())
    clst.append(c)
    dlst.append(d)
clst.sort()
dlst.sort()
if a < 6:
    print(dlst[0] * a)
else:
    money = 0
    c_count = a // 6
    money += c_count * clst[0]
    d_count = a % 6
    money += d_count * dlst[0]
    if (c_count+1) * clst[0] < money:
        print((c_count+1) * clst[0])
    else:
        print(money)
